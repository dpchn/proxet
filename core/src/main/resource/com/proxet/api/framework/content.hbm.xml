<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.proxet.api.model.AdContent" table="ad_content">
		<meta attribute="class-description">This class contains Ad content details.</meta>
		<id name="id" column="ID">
			<generator class="increment" />
		</id>
		<property name="contentType" column="CONTENT_TYPE" not-null="true" />
		<property name="shortNotification" column="SHORT_NOTIFICATION" not-null="true" />
		<property name="longNotification" column="LONG_NOTIFICATION" not-null="true" />
		<property name="status">
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">com.proxet.api.framework.Status</param>
				<param name="type">12</param>
			</type>
		</property>
		<many-to-one name="company" class="com.proxet.api.model.Company" column="COMPANY_ID"  cascade ="all" insert="true" update="true" />
	</class>
</hibernate-mapping>