<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.proxet.api.model.Company" table="company">

		<id name="id" column="COMPANY_ID">
			<generator class="increment" />
		</id>
		<property name="firstName" column="FIRSTNAME" />
		<property name="lastName" column="LASTNAME" />
		<property name="company" column="COMPANY_NAME" />
		<property name="phone" column="PHONE" not-null="true" />
		<property name="status">
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">com.proxet.api.framework.Status</param>
				<param name="type">12</param>
			</type>
		</property>
		<one-to-one name="companyLogin" class="com.proxet.api.model.CompanyLogin"
			cascade="save-update" />
	 	
